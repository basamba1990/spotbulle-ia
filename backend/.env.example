# Configuration pour les APIs d'Intelligence Artificielle
# Copiez ce fichier vers .env et remplissez les valeurs

# === APIs d'IA ===

# OpenAI API (pour transcription Whisper et embeddings)
# Obtenez votre clé sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# NLP Cloud API (pour extraction de mots-clés et analyse de texte)
# Obtenez votre clé sur: https://nlpcloud.com/
NLPCLOUD_API_KEY=

# === Configuration existante ===

# Base de données
DATABASE_URL=
DB_HOST=
DB_PORT=5432
DB_NAME=spotbulle_ia
DB_USER=
DB_PASSWORD=

# JWT
JWT_SECRET=

# Supabase (pour le stockage de fichiers)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Frontend URL
FRONTEND_URL=https://spotbulle-ia.vercel.app

# Environnement
NODE_ENV=development

# === Nouvelles configurations pour l'IA ===

# Taille maximale des fichiers pour l'analyse (en octets)
# 100MB par défaut
MAX_FILE_SIZE_FOR_AI=104857600

# Timeout pour les requêtes d'IA (en millisecondes)
AI_REQUEST_TIMEOUT=120000

# Seuil de similarité par défaut pour les recommandations
DEFAULT_SIMILARITY_THRESHOLD=0.6

# Nombre maximum de recommandations par défaut
DEFAULT_MAX_RECOMMENDATIONS=10

# Activer/désactiver les fonctionnalités d'IA en mode développement
ENABLE_AI_FEATURES=true

# Mode de fallback pour les APIs d'IA (si les clés ne sont pas configurées)
# true = utiliser des données simulées, false = retourner des erreurs
AI_FALLBACK_MODE=true

